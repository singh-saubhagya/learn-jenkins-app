pipeline {
    agent any

    stages {
        stage('Build') {
            agent{
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                   ls -la
                   node --version
                   npm ci
                   npm run build
                   ls -la
                '''
            }
        }
        stage('Test') {
            agent{
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                echo "Test stage"
                sh '''
                    test -f build/index.html
                    npm test -- --ci --reporters=jest-junit
                '''
            }
        }
        stage('E2E') {
            agent{
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                 sh '''
           # Install system dependencies for Playwright
           apk add --no-cache \
             chromium \
             nss \
             freetype \
             harfbuzz \
             ca-certificates \
             ttf-freefont \
             wget \
             bash

           # Install project dependencies
           npm ci

           # Install Playwright browsers (without --with-deps)
           npx playwright install

           # Start static server in background
           npm install -g serve
           nohup serve -s build -l 5000 &

           # Run Playwright tests
           npx playwright test --reporter=junit --output=test-results
        '''
    }
    }
    
    post {
        always {
            junit 'test-results/junit.xml'
        }
    }
}
