pipeline {
    agent any

    environment {
        PATH = "/usr/local/bin/docker"
    }

    stages {
        stage ('build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                  ls -la
                  node --version
                  npm --version
                  npm ci
                  npm run build
                  ls -la
                '''
            }
        }
    }
}
